@{
    ViewData["Title"] = "About Us";
}

<div class="container mt-2">
    <!-- Header -->
    <header class="text-center mb-4">
        <h1 class="display-4 fw-bold">About Us</h1>
        <p class="lead text-secondary">Learn more about Quillia, our mission, and our team.</p>
    </header>

    <!-- Our Mission Section -->
    <section class="mb-2">
        <h2 class="fw-bold text-primary">Our Mission</h2>
        <p>
            Quillia is dedicated to providing a comprehensive online bookstore where readers can find and explore books from various genres. Our mission is to foster a love of reading and make literature accessible to everyone.
        </p>
    </section>

    <!-- Our Values Section -->
    <section class="mb-5">
        <h2 class="fw-bold text-primary">Our Values</h2>
        <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Customer Focus:</strong> We prioritize our customers' needs and strive to deliver exceptional service.</li>
            <li class="list-group-item"><strong>Integrity:</strong> Honesty and transparency are at the heart of everything we do.</li>
            <li class="list-group-item"><strong>Innovation:</strong> We embrace change and encourage creativity in our solutions.</li>
            <li class="list-group-item"><strong>Passion for Books:</strong> We’re committed to promoting reading and literacy.</li>
        </ul>
    </section>

    <!-- Our Team Section -->
    <section class="mb-5">
        <h2 class="fw-bold text-primary">Meet Our Team</h2>
        <div class="row">
            <!-- Team Member 1 -->
            <div class="col-md-4 text-center">
                <img src="~/images/person/black-women.png" class="rounded-circle mb-3" alt="Team Member 1" width="150" height="150">
                <h5>Jane Doe</h5>
                <p class="text-muted">CEO & Founder</p>
                <p>Jane leads Quillia with a passion for books and innovation, inspiring the team to make reading accessible to all.</p>
            </div>
            <!-- Team Member 2 -->
            <div class="col-md-4 text-center">
                <img src="~/images/person/black-man.png" class="rounded-circle mb-3" alt="Team Member 2" width="150" height="150">
                <h5>John Smith</h5>
                <p class="text-muted">Head of Marketing</p>
                <p>John brings creativity and strategy to Quillia’s marketing, helping us connect with readers worldwide.</p>
            </div>
            <!-- Team Member 3 -->
            <div class="col-md-4 text-center">
                <img src="~/images/person/man.png" class="rounded-circle mb-3" alt="Team Member 3" width="150" height="150">
                <h5>Emily Johnson</h5>
                <p class="text-muted">Chief Technology Officer</p>
                <p>Emily ensures our platform runs smoothly and stays at the forefront of technology and user experience.</p>
            </div>
        </div>
    </section>

    <!-- Contact Information Section -->
    <section class="mb-5">
        <h2 class="fw-bold text-primary">Get in Touch</h2>
        <p>
            We’d love to hear from you! Reach out to us with any questions or feedback.
        </p>
        <ul class="list-unstyled">
            <li><i class="fas fa-map-marker-alt"></i> Address: 123 Book Lane, New York, NY 10012</li>
            <li><i class="fas fa-envelope"></i> Email: <a href="mailto:info@quillia.com">info@quillia.com</a></li>
            <li><i class="fas fa-phone"></i> Phone: +1 (234) 567-890</li>
        </ul>
    </section>
</div>
