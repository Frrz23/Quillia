<div class="container">
    <div class="row">
        <!-- Categories Section -->
        <div class="col-lg-3 col-md-4 col-sm-12">
            <h4 class="text-dark pb-2">Categories</h4>
            <ul class="list-group shadow-sm">
                <li class="list-group-item @(ViewBag.CurrentCategory == null ? "active text-white bg-info" : "")">
                    <a class="text-decoration-none text-dark @(ViewBag.CurrentCategory == null ? "text-white" : "")"
                       asp-area="Customer"
                       asp-controller="Genre"
                       asp-action="Index">
                        All
                    </a>
                </li>
                @foreach (var category in ViewBag.Categories)
                {
                    <li class="list-group-item @(ViewBag.CurrentCategory == category.Id ? "active text-white bg-info" : "")">
                        <a class="text-decoration-none text-dark @(ViewBag.CurrentCategory == category.Id ? "text-white" : "")"
                           asp-area="Customer"
                           asp-controller="Genre"
                           asp-action="Index"
                           asp-route-categoryId="@category.Id">
                            @category.Name
                        </a>
                    </li>
                }
            </ul>
        </div>

        <!-- Product Section -->
        <div class="col-lg-9 col-md-8 col-sm-12">
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-12 pb-4">
                        <div class="card border-0 p-3 shadow border-top border-5 rounded">
                            <img src="@product.ImageUrl" class="card-img-top rounded" />
                            <div class="card-body pb-0">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">
                                    @product.Title
                                </p>
                                <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
                                <p class="text-dark text-opacity-75 text-center mb-0">
                                    List Price:
                                    <span class="text-decoration-line-through">रु @product.ListPrice.ToString("N")</span>
                                </p>
                                <p class="text-dark text-opacity-75 text-center">
                                    As low as: रु @product.Price100.ToString("N")
                                </p>
                            </div>
                            <a asp-area="Customer"
                               asp-controller="Home"
                               asp-action="Details"
                               asp-route-productId="@product.Id"
                               class="btn btn-info bg-gradient border-0 form-control">
                                Details
                            </a>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
